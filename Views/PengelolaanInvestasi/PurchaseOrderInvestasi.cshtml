@using System; 
@using System.Globalization;
@Html.AntiForgeryToken() 

@{ 
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml"; 
    ViewData["Controller"] = "Pengelolaan Investasi"; 
    ViewData["Title"] = "Purchase Order Investasi"; 

    CultureInfo culture = new CultureInfo("id-ID"); 
    var IDUnitUser = User.Claims.Where(c => c.Type == "IDUnit").Select(c => c.Value).Single(); 
    var IDRoleUser = User.Claims.Where(c => c.Type == "IDRole").Select(c => c.Value).ToArray(); 
    var namaUnit = User.Claims.Where(c => c.Type == "namaUnit").Select(c => c.Value).Single(); 
} 

@section Header{
<!-- jQuery UI -->
<link rel="stylesheet" href="~/lib/jquery-ui/jquery-ui.css" />
<!-- DataTables Select-->
<link rel="stylesheet" href="~/lib/jquery-datatables-checkboxes-1.2.12/css/dataTables.checkboxes.css" />
<!-- daterange picker -->
<link rel="stylesheet" href="~/lib/daterangepicker/daterangepicker.css" />
<!-- Tempusdominus Bootstrap 4 -->
<link rel="stylesheet" href="~/lib/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.min.css" />
}

<div class="card-header p-0 border-bottom-0">
    <ul class="nav nav-tabs" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" data-toggle="pill" href="#inputPurchaseOrderTab" role="tab" aria-controls="inputPurchaseOrderTab" aria-selected="true">Input</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="pill" href="#revisiPurchaseOrderTab" role="tab" aria-controls="revisiPurchaseOrderTab" aria-selected="false">Revisi</a>
        </li>
    </ul>
</div>
<div class="tab-content">
    <div class="tab-pane fade show active" id="inputPurchaseOrderTab" role="tabpanel" aria-labelledby="inputPurchaseOrderTab">
        <br />
        <div class="row">
            <div class="col-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title"> Input Purchase Order </h3>
                    </div>
                    <div class="card-body">
                            <form method="post" id="formInputPurchaseOrder" enctype="multipart/form-data" novalidate>
                            <div class="row">
                                <div class="col-4">
                                    <div class="form-group">
                                        <label>Nomor PO <b class="text-danger">*</b></label>
                                        <input id="nomorPO" name="nomorPO" type="text" class="form-control" placeholder="Masukan Nomor PO..." onkeydown="return false;" required />
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="form-group">
                                        <label>Supplier <b class="text-danger">*</b></label>
                                        <select id="IDSupplier" name="IDSupplier" class="form-control select2bs4" required>
                                            <option value="" style="display: none" disabled selected>Pilih supplier...</option>
                                            @foreach (var supplier in Model.supplier) {
                                            <option value="@supplier.ID_SUPPLIER">@supplier.NAMA_SUPPLIER</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="form-group">
                                        <label>Tanggal PO <b class="text-danger">*</b></label>
                                        <div class="input-group date" id="reservationdate1" data-target-input="nearest">
                                            <input id="tanggalPO" name="tanggalPO" type="text" class="form-control datetimepicker-input" placeholder="mm/dd/yy" data-target="#reservationdate1" required />
                                            <div class="input-group-append" data-target="#reservationdate1" data-toggle="datetimepicker">
                                                <div class="input-group-text btn"><i class="fa fa-calendar"></i></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <div class="form-group">
                                        <label>Pajak (Dalam %) <b class="text-danger">*</b></label>
                                        <input id="pajak" name="pajak" type="number" class="form-control" min="0" placeholder="Masukan jumlah pajak..." required />
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="form-group">
                                        <label>Diskon</label>
                                        <input id="diskon" name="diskon" type="text" class="form-control" placeholder="Rp 0" />
                                    </div>
                                </div>
                            </div>
                        </form>
                        <hr />
                        <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header">
                                        <h3 class="card-title">Pilih Aset <b class="text-danger">*</b></h3>
                                        <div class="card-tools">
                                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                                <i class="fas fa-minus"></i>
                                            </button>
                                        </div>
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            <fieldset class="col-12 border">
                                                <legend class="w-auto"><h6>Tampil data berdasarkan:</h6></legend>
                                                <div class="row px-2">
                                                    <div class="col-3">
                                                        <div class="form-group">
                                                            <label>Tahun</label>
                                                            <select id="tahun" class="form-control select2bs4" style="width: 100%" novalidate>
                                                                <option value="" selected>Semua tahun...</option>
                                                                @foreach (var tahun in Model.tahun) {
                                                                <option value="@tahun.TAHUN_ANGGARAN">@tahun.TAHUN_ANGGARAN</option>
                                                                }
                                                            </select>
                                                        </div>
                                                    </div>
                                                    <div class="col-3">
                                                        <div class="form-group">
                                                            <label>Bulan</label>
                                                            <select id="bulan" class="form-control select2bs4" style="width: 100%" novalidate>
                                                                <option value="" selected>Semua bulan...</option>
                                                                <option value="Januari">Januari</option>
                                                                <option value="Februari">Februari</option>
                                                                <option value="Maret">Maret</option>
                                                                <option value="April">April</option>
                                                                <option value="Mei">Mei</option>
                                                                <option value="Juni">Juni</option>
                                                                <option value="Juli">Juli</option>
                                                                <option value="Agustus">Agustus</option>
                                                                <option value="September">September</option>
                                                                <option value="Oktober">Oktober</option>
                                                                <option value="November">November</option>
                                                                <option value="Desember">Desember</option>
                                                            </select>
                                                        </div>
                                                    </div>
                                                    <div class="col-3">
                                                        <div class="form-group">
                                                            <label>Kategori</label>
                                                            <select id="kategori" class="form-control select2bs4" style="width: 100%" novalidate>
                                                                <option value="" selected>Semua kategori...</option>
                                                                @foreach (var kategori in Model.kategori) {
                                                                <option value="@kategori.ID_KATEGORI">@kategori.DESKRIPSI</option>
                                                                }
                                                            </select>
                                                        </div>
                                                    </div>
                                                    <div class="col-3">
                                                        <div class="form-group">
                                                            <label>Sub Kategori</label>
                                                            <select id="subKategori" class="form-control select2bs4" style="width: 100%" novalidate>
                                                                <option value="" selected>Semua sub kategori...</option>
                                                            </select>
                                                        </div>
                                                    </div>
                                                </div>
                                            </fieldset>
                                        </div>
                                        <br />
                                        <div class="row">
                                            <div class="col-12">
                                                <table id="tabelInputPurchaseOrder" class="table table-hover">
                                                    <thead>
                                                        <tr>
                                                            <th></th>
                                                            <th style="color: transparent">Tahun:</th>
                                                            <th style="color: transparent">Bulan:</th>
                                                            <th style="color: transparent">Kategori:</th>
                                                            <th style="color: transparent">SubKategori:</th>
                                                            <th>Nama Barang:</th>
                                                            <th>Merk:</th>
                                                            <th>Harga Satuan:</th>
                                                            <th>Jumlah:</th>
                                                            <th>Total:</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody> </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <hr />
                            </div>
                        </div>
                        <form method="post" id="formInputPurchaseOrderFooter" class="row justify-content-center" style="position: -webkit-sticky; position: sticky; bottom: 0; background-color: white; padding: 10px; z-index: 4">
                            <label class="col-sm-auto col-form-label text-left">Total Purchase Order</label>
                            <div class="input-group col-sm-6">
                                <input id="totalPurchaseOrder" type="text" class="form-control" placeholder="Rp 0" onkeydown="return false;" required />
                                <span class="input-group-append">
                                    <button id="btnPurchaseOrder" type="submit" form="formInputPurchaseOrder" class="btn btn-primary">Pesan Barang (<b id="selectedPurchaseOrder">0</b>)</button>
                                </span>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="tab-pane fade" id="revisiPurchaseOrderTab" role="tabpanel" aria-labelledby="revisiPurchaseOrderTab">
        <br />
        <div class="row">
            <div class="col-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title"> Revisi Purchase Order </h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <div class="input-group mb-2">
                                    <input id="findNomorPO" name="findNomorPO" type="text" class="form-control" placeholder="Masukkan No. Purchase Order..." />
                                    <div class="input-group-append">
                                        <span class="input-group-text"><i class="fas fa-search"></i></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <form method="post" id="formRevisiDetailPurchaseOrder" enctype="multipart/form-data" novalidate>
                            <table id="tabelRevisiPurchaseOrder" class="table table-hover">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>Nama Barang:</th>
                                        <th>Merk:</th>
                                        <th>Satuan:</th>
                                        <th class="none">Spesifikasi:</th>
                                        <th>Harga Satuan:</th>
                                        <th>Jumlah:</th>
                                        <th>Total:</th>
                                        <th>ID Detail Pencairan:</th>
                                    </tr>
                                </thead>
                                <tbody></tbody> 
                            </table>              
                        </form>
                        <hr />
                        <form method="post" id="formRevisiPurchaseOrder" enctype="multipart/form-data" novalidate>
                            <div class="card">
                                <div class="card-header">
                                    <h3 class="card-title">Puchase Order <b class="text-danger">*</b></h3>
                                    <div class="card-tools">
                                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                            <i class="fas fa-minus"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <input id="IDPurchaseOrderRevisi" name="IDPurchaseOrderInvestasi" type="hidden" class="form-control" readonly required />
                                    <div class="row">
                                        <div class="col-4">
                                            <div class="form-group">
                                                <label>Nomor PO <b class="text-danger">*</b></label>
                                                <input id="nomorPORevisi" name="nomorPO" type="text" class="form-control" placeholder="Masukan Nomor PO..." onkeydown="return false;" required />
                                            </div>
                                        </div>
                                        <div class="col-4">
                                            <div class="form-group">
                                                <label>Supplier <b class="text-danger">*</b></label>
                                                <select id="IDSupplierRevisi" name="IDSupplier" class="form-control select2bs4" required>
                                                    <option value="" style="display: none" disabled selected>Pilih supplier...</option>
                                                    @foreach (var supplier in Model.supplier) {
                                                    <option value="@supplier.ID_SUPPLIER">@supplier.NAMA_SUPPLIER</option>
                                                    }
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col-4">
                                            <div class="form-group">
                                                <label>Tanggal PO <b class="text-danger">*</b></label>
                                                <div class="input-group date" id="reservationdate2" data-target-input="nearest">
                                                    <input id="tanggalPORevisi" name="tanggalPO" type="text" class="form-control datetimepicker-input" placeholder="mm/dd/yy" data-target="#reservationdate2" required />
                                                    <div class="input-group-append" data-target="#reservationdate2" data-toggle="datetimepicker">
                                                        <div class="input-group-text btn"><i class="fa fa-calendar"></i></div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-6">
                                            <div class="form-group">
                                                <label>Pajak (Dalam %) <b class="text-danger">*</b></label>
                                                <input id="pajakRevisi" name="pajak" type="number" class="form-control" min="0" placeholder="Masukan jumlah pajak..." required />
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="form-group">
                                                <label>Diskon</label>
                                                <input id="diskonRevisi" name="diskon" type="text" class="form-control" placeholder="Rp 0" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <hr />
                        </form>
                        <form method="post" id="formRevisiPurchaseOrderFooter" class="row justify-content-center" style="position: -webkit-sticky; position: sticky; bottom: 0; background-color: white; padding: 10px; z-index: 4">
                            <label class="col-sm-auto col-form-label text-left">Total Revisi Purchase Order</label>
                            <div class="input-group col-sm-6">
                                <input id="totalPurchaseOrderRevisi" name="totalTanpaPajak" type="text" class="form-control" placeholder="Rp 0" onkeydown="return false;" required />
                                <span class="input-group-append">
                                    <button id="btnRevisiPurchaseOrder" type="submit" form="formRevisiDetailPurchaseOrder" class="btn btn-primary">Simpan Perubahan</button>
                                </span>
                            </div>
                        </form>
                    </div>
                    <!-- /.card-body -->
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
<!-- jQuery UI -->
<script src="~/lib/jquery-ui/jquery-ui.js"></script>
<!-- Select -->
<script src="~/lib/datatables-select/js/dataTables.select.min.js"></script>
<!-- CheckBox -->
<script src="~/lib/jquery-datatables-checkboxes-1.2.12/js/dataTables.checkboxes.min.js"></script>
<!-- InputMask -->
<script src="~/lib/moment/moment.min.js"></script>
<script src="~/lib/inputmask/jquery.inputmask.min.js"></script>
<!-- date-range-picker -->
<script src="~/lib/daterangepicker/daterangepicker.js"></script>
<!-- Tempusdominus Bootstrap 4 -->
<script src="~/lib/tempusdominus-bootstrap-4/js/tempusdominus-bootstrap-4.min.js"></script>

<script>
    //Element Declaration
    let tabelInputPurchaseOrder;
    let tabelRevisiPurchaseOrder;

    refreshTabelInputPurchaseOrder();
    refreshTabelRevisiPurchaseOrder();

    $(".select2bs4").select2({
        theme: "bootstrap4",
        width: "100%",
    });

    $("#reservationdate1").datetimepicker({
        format: "L",
    });

    $("#reservationdate2").datetimepicker({
        format: "L",
    });

    //Function Variabel
    let formatRupiah = (number) => {
        return new Intl.NumberFormat("id-ID", {
            style: "currency",
            currency: "IDR",
            minimumFractionDigits: 0,
        }).format(number);
    };

    let formatString = (value) => {
        return "'" + value + "'";
    };

    function refreshTabelInputPurchaseOrder() {
        tabelInputPurchaseOrder = $("#tabelInputPurchaseOrder").DataTable({
            ajax: {
                url: "/PengelolaanInvestasi/getPurchaseOrderRequestPencairanInvestasi",
                type: "POST",
                dataSrc: "data",
                beforeSend: function (request) {
                    request.setRequestHeader("RequestVerificationToken", $('input[name="__RequestVerificationToken"]').val());
                },
            },
            columns: [
                { data: "ID_DETAIL_PENCAIRAN_INVESTASI" },
                { data: "TAHUN_ANGGARAN" },
                { data: "BULAN_PENGADAAN" },
                { data: "ID_KATEGORI" },
                { data: "ID_REF_SK" },
                { data: "NAMA_PENGADAAN" },
                { data: "MERK" },
                {
                    data: "HARGA_SATUAN",
                    render: function (data, type, row, meta) {
                        return formatRupiah(data);
                    },
                },
                { data: "JUMLAH" },
                {
                    data: "TOTAL_PENGADAAN",
                    render: function (data, type, row, meta) {
                        return formatRupiah(data);
                    },
                },
            ],
            language: {
                url: "../json/datatables-id.json",
            },
            columnDefs: [
                {
                    targets: 0,
                    checkboxes: {
                        selectRow: true,
                    },
                },
                {
                    targets: [1, 2, 3, 4],
                    visible: false,
                },
            ],
            select: {
                style: "multi",
            },
            fixedHeader: {
                header: true,
                footer: true,
            },
            paging: true,
            lengthChange: true,
            searching: true,
            ordering: false,
            info: true,
            autoWidth: false,
            responsive: true,
        });
    }

    function refreshTabelRevisiPurchaseOrder() {
        tabelRevisiPurchaseOrder = $("#tabelRevisiPurchaseOrder").DataTable({
            ajax: {
                url: '/PengelolaanInvestasi/getDetailPurchaseOrder',
                type: 'POST',
                data: function ( e ) {
                    e.IDPurchaseOrderInvestasi = $('#IDPurchaseOrderRevisi').val();
                },
                dataSrc: 'data',
                beforeSend: function (request) {
                    request.setRequestHeader("RequestVerificationToken", $('input[name="__RequestVerificationToken"]').val());
                },
            },
            columns: [
                { 
                    "data": null, "sortable": false, render: function (data, type, row, meta) {
                        return type === 'display' ?
                                '<button type="button" class="btn btn-block btn-outline-primary btn-sm"><b>' + (meta.row + meta.settings._iDisplayStart + 1) + '<b></button>' : meta;
                    }  
                },
                {
                    data: "NAMA_BARANG", render: function (data, type, row, meta) {
                        return type === 'display' ?
                            '<input id="namaBarang" name="namaBarang" type="text" class="form-control form-control-border" value="' + data + '" required/>' : data;
                    }
                },
                {
                    data: "MERK", render: function (data, type, row, meta) {
                        return type === 'display' ?
                            '<input id="merk" name="merk" type="text" class="form-control form-control-border" value="' + data + '" required/>' : data;
                    }
                },
                {
                    data: "SATUAN", render: function (data, type, row, meta) {
                        return type === 'display' ?
                            '<input id="satuan" name="satuan" type="text" class="form-control form-control-border" value="' + data + '" required/>' : data;
                    }
                },
                {
                    data: "SPESIFIKASI", render: function (data, type, row, meta) {
                        return type === 'display' ?
                            '<textarea id="spesifikasi" name="spesifikasi" class="form-control form-control-border" rows="5" placeholder="Masukkan spesifikasi aset..." required>' + data +'</textarea>' : data;
                    }
                },
                {
                    data: "HARGA_SATUAN", render: function (data, type, row, meta) {
                        return type === 'display' ?
                            '<input id="hargaSatuan" name="hargaSatuan" type="text" class="form-control form-control-border" value="' + formatRupiah(data) + '" required/>' : data;
                    }
                },
                {
                    data: "JUMLAH", render: function (data, type, row, meta) {
                        return type === 'display' ?
                                '<input id="jumlah" name="jumlah" type="number" min="1" class="form-control form-control-border" value="' + data + '" required/>' : data;
                    }
                },
                {
                    data: "TOTAL", render: function (data, type, row, meta) {
                        return type === 'display' ?
                                '<input id="subTotal" name="subTotal" type="text" class="form-control form-control-border" onkeydown="return false;" value="' + formatRupiah(data) + '" required/>' : data;
                    }
                },
                {
                    data: "ID_DETAIL_PO_INVESTASI", render: function (data, type, row, meta) {
                        return type === 'display' ?
                                '<input id="IDDetailPurchaseOrderInvestasi" name="IDDetailPurchaseOrderInvestasi" type="text" class="form-control form-control-border" value="' + data + '" readonly required/>' : data;
                    }
                },
            ],
            language: {
                url: "../json/datatables-id.json",
            },
            columnDefs: [
                {
                    targets: 8,
                    visible: false,
                    searchable: true,
                },
                {
                    targets: "_all", 
                    className: "align-middle", 
                },
            ],
            fixedHeader: {
                header: true,
                footer: true,
            },
            paging: true,
            lengthChange: false,
            searching: false,
            ordering: false,
            info: true,
            autoWidth: false,
            responsive: {
                details: {
                    display: $.fn.dataTable.Responsive.display.childRowImmediate,
                    type: 'none',
                    target: ''
                }
            },
        });
    }

    function autoGenerateNomorPO() {
        $.ajax({
            url: "/PengelolaanInvestasi/getPurchaseOrderNumber",
            type: "POST",
            headers: { RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val() },
            dataType: "json",
            success: function (result) {
                $("#nomorPO").val(result);
            },
        });
    }

    function clsInputPuchaseOrder() {
        autoGenerateNomorPO();
        $("#inputPurchaseOrderTab #IDSupplier").val("").trigger("change");
        $("#inputPurchaseOrderTab #tanggalPO").val(new Date().toLocaleDateString());
        $("#inputPurchaseOrderTab #pajak").val("");
        $("#inputPurchaseOrderTab #diskon").val("");
        $("#inputPurchaseOrderTab #totalPurchaseOrder").val("");
        $("#inputPurchaseOrderTab #selectedPurchaseOrder").html("0");

        $("#inputPurchaseOrderTab #btnPurchaseOrder").prop("disabled", true);
        $("#inputPurchaseOrderTab #formInputPurchaseOrder").removeClass("was-validated");
        $("#inputPurchaseOrderTab #formInputPurchaseOrderFooter").removeClass("was-validated");

        $("#tabelInputPurchaseOrder").DataTable().ajax.reload();
    }

    function clsRevisiPurchaseOrder(){
        $("#revisiPurchaseOrderTab #findNomorPO").val('');
        $("#revisiPurchaseOrderTab #IDPurchaseOrderRevisi").val('');
        $("#revisiPurchaseOrderTab #nomorPORevisi").val('');
        $("#revisiPurchaseOrderTab #tanggalPORevisi").val('');
        $("#revisiPurchaseOrderTab #IDSupplierRevisi").val('').trigger('change');
        $("#revisiPurchaseOrderTab #pajakRevisi").val('');
        $("#revisiPurchaseOrderTab #diskonRevisi").val('');
        $("#revisiPurchaseOrderTab #totalPurchaseOrderRevisi").val('');
        lockRevisiPurchaseOrder(true);

        $("#revisiPurchaseOrderTab #btnRevisiPurchaseOrder").prop("disabled", true);
        $("#revisiPurchaseOrderTab #formRevisiPurchaseOrder").removeClass("was-validated");
        $("#tabelRevisiPurchaseOrder").DataTable().ajax.reload();
    }

    function lockRevisiPurchaseOrder(bool){
        $("#revisiPurchaseOrderTab #IDPurchaseOrderRevisi").prop("disabled", bool);
        $("#revisiPurchaseOrderTab #nomorPORevisi").prop("disabled", bool);
        $("#revisiPurchaseOrderTab #tanggalPORevisi").prop("disabled", bool);
        $("#revisiPurchaseOrderTab #IDSupplierRevisi").prop("disabled", bool);
        $("#revisiPurchaseOrderTab #pajakRevisi").prop("disabled", bool);
        $("#revisiPurchaseOrderTab #diskonRevisi").prop("disabled", bool);
        $("#revisiPurchaseOrderTab #totalPurchaseOrderRevisi").prop("disabled", bool);

        $("#revisiPurchaseOrderTab #btnRevisiPurchaseOrder").prop("disabled", bool);
    }

    //jQuery Function
    $(document).ready(function () {
        $("#inputPurchaseOrderTab #subKategori").prop("disabled", true);
        $("#inputPurchaseOrderTab #tanggalPO").val(new Date().toLocaleDateString());
        $("#inputPurchaseOrderTab #btnPurchaseOrder").prop("disabled", true);

        autoGenerateNomorPO();
        clsRevisiPurchaseOrder();
    });

