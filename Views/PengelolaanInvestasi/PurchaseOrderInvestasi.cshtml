    jQuery.fn.dataTable.Api.register("sum()", function () {
        return this.flatten().reduce(function (a, b) {
            if (typeof a === "string") {
                a = a.replace(/[^\d]/g, "") * 1;
            }
            if (typeof b === "string") {
                b = b.replace(/[^\d]/g, "") * 1;
            }

            return a + b;
        }, 0);
    });

    Array.prototype.sum = function (prop) {
        var total = 0
        for ( var i = 0, _len = this.length; i < _len; i++ ) {
            total += this[i][prop];
        }
        return total;
    }
