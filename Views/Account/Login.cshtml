@{
    Layout = null;
    ViewData["Title"] = "Login";
}

<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />
    <!-- Material Icon -->
    <link href="https://cdn.jsdelivr.net/npm/@@mdi/font@5.x/css/materialdesignicons.min.css" rel="stylesheet" />
    <!-- Animate on Scroll -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />
    <!-- Sweet Alert -->
    <link rel="stylesheet" href="~/lib/sweetalert2/sweetalert2.min.css" />
    <!-- Theme style -->
    <link rel="stylesheet" href="~/css/login.css" />
</head>

<body>
    <div class="page-wrapper">
        <!-- Card Wrapper -->
        <div class="d-flex justify-content-center align-items-center card-wrapper">
            <!-- Card Login -->
            <div data-aos="zoom-out-up" class="login-card">
                <div class="row login-card-row">
                    <!-- Left Side Column -->
                    <div class="col-md-7 col-xs-12 pt-2 px-4">
                        <!-- Atma Jaya Icon -->
                        <img data-aos="fade-right" data-aos-delay="200" src="~/img/atma-logo.png" alt="Atma Icon" class="img-fluid login-atma-icon mx-auto d-flex" />

                        <!-- Sistem Name-->
                        <p data-aos="fade-right" data-aos-delay="300" class="text-title"> SISPRAS Universitas Atma Jaya Yogyakarta </p>

                        <!-- Description -->
                        <p data-aos="fade-right" data-aos-delay="400" class="text-description"> Selamat datang di layanan SISPRAS, Sistem Informasi Sarana dan Prasarana Universitas Atma Jaya Yogyakarta. </p>

                        <!-- Yellow Flower Icon -->
                        <div class="wrapper-zero d-flex justify-content-end">
                            <img data-aos="zoom-in-up" style="margin-top: 5px" data-aos-delay="800" class="shape-yellow" src="~/img/decoration-yellow.png" alt="decoration-yellow" />
                        </div>
                    </div>

                    <!-- Right Side Column -->
                    <div class="col-md-5 col-xs-12 login-right-content">
                        <!-- Title Login -->
                        <p data-aos="fade-left" data-aos-delay="200" class="login-card-text"> Login </p>
                        <form method="post" asp-controller="Account" asp-action="loginAuth" enctype="multipart/form-data">
                            @Html.AntiForgeryToken()
                            <!-- Username Field -->
                            <div data-aos="fade-left" data-aos-delay="300" class="input-group flex-nowrap mb-4 px-5">
                                <span class="input-group-text" id="addon-wrapping">
                                    <i class="mdi mdi-account" aria-hidden="true"> </i>
                                </span>
                                <input type="text" name="username" class="form-control" placeholder="Masukkan username" aria-label="Username" aria-describedby="addon-wrapping" required/>
                            </div>
                            <!-- Password Field -->
                            <div data-aos="fade-left" data-aos-delay="400" class="input-group flex-nowrap mb-4 px-5">
                                <span class="input-group-text" id="addon-wrapping">
                                    <i class="mdi mdi-key" aria-hidden="true"> </i>
                                </span>
                                <input type="password" name="password" class="form-control" placeholder="Masukkan kata sandi" aria-label="Password" aria-describedby="addon-wrapping" required/>
                            </div>
                            <!-- Submit Button -->
                            <div data-aos="fade-left" data-aos-delay="500" class="input-group d-flex justify-content-center">
                                <button type="submit" class="btn btn-primary">Masuk</button>
                            </div>
                        </form>

                        <!-- Motto -->
                        <div class="mt-auto wrapper-motto">
                            <p data-aos="zoom-in-up" data-aos-delay="900" class="motto"> UNGGUL - INKLUSIF - HUMANIS - BERINTEGRITAS </p>
                        </div>

                        <div class="wrapper-two d-flex justify-content-end">
                            <img data-aos="zoom-in-up" style="margin-top: 35px" data-aos-delay="800" class="shape-blue" src="~/img/decoration-blue-tip-2.png" alt="decoration-blue-tip-2" />
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <div class="footer-login pt-2">
            <p> &copy; 2022 Kantor Sistem Informasi Universitas Atma Jaya Yogyakarta </p>
        </div>
    </div>
    <!-- Sweet Alert -->
    <script src="~/lib/sweetalert2/sweetalert2.all.min.js"></script>
    <script src="~/lib/sweetalert2/sweetalert2.min.js"></script>
    @if (TempData["error"] != null) {
        <script>
            Swal.fire({
                icon: 'error',
                title: 'Login Gagal!',
                text: "@TempData["error"].ToString()",
                confirmButtonColor: '#f2aa4c',
                confirmButtonText: 'Close'
            })
        </script>
    }
    <!-- Animate on Scroll Script -->
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init({ once: true });
    </script>
</body>

</html>