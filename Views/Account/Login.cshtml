@Html.AntiForgeryToken()

@{
    Layout = null;
    ViewData["Title"] = "Login";
}

<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Bootstrap -->
    <link rel="stylesheet" type="text/css" href="~/lib/bootstrap5/css/bootstrap.min.css" />
    <!-- Material Icon -->
    <link href="https://cdn.jsdelivr.net/npm/@@mdi/font@5.x/css/materialdesignicons.min.css" rel="stylesheet" />
    <!-- Animate on Scroll -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />
    <!-- Sweet Alert -->
    <link rel="stylesheet" href="~/lib/sweetalert2/sweetalert2.min.css" />
    <!-- Theme style -->
    <link rel="stylesheet" href="~/css/login.css" />
    <title>SISPRAS | @ViewBag.Title</title>
</head>
<body>
    <form method="post" asp-controller="Account" asp-action="loginAuth" enctype="multipart/form-data">
        <div class="modal fade" id="RoleModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog modal-sm modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="staticBackdropLabel">Login sebagai</h5>
                    </div>
                    <div class="modal-body">
                        <input type="hidden" class="form-control" id="username" name="username" value="" readonly="readonly" required>
                        <input type="hidden" class="form-control" id="password" name="password" value="" readonly="readonly" required>
                        <select id="role" name="role" class="form-select" required></select>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Pilih</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <div class="page-wrapper">
        <!-- Card Wrapper -->
        <div class="d-flex justify-content-center align-items-center card-wrapper">
            <!-- Card Login -->
            <div data-aos="zoom-out-up" class="login-card">
                <div class="row login-card-row">
                    <!-- Left Side Column -->
                    <div class="col-md-7 col-xs-12 pt-2 px-4">
                        <!-- Atma Jaya Icon -->
                        <img data-aos="fade-right" data-aos-delay="200" src="~/img/atma-logo.png" alt="Atma Icon" class="img-fluid login-atma-icon mx-auto d-flex" />
                        <!-- Sistem Name-->
                        <p data-aos="fade-right" data-aos-delay="300" class="text-title"> Sistem Informasi Sarana dan Prasarana </p>
                        <!-- Description -->
                        <p data-aos="fade-right" data-aos-delay="400" class="text-description"> SISPRAS (Sistem Informasi Sarana dan Prasarana) Universitas Atma Jaya Yogyakarta adalah aplikasi berbasis web yang digunakan untuk menunjang proses pendataan aset di Universitas Atma Jaya Yogyakarta. </p>
                        <hr />
                        <!-- Link Helpdesk -->
                        <p data-aos="fade-right" data-aos-delay="500" class="text-description pb-2">
                            <i class="mdi mdi-book-open-variant"></i> Lihat Panduan Penggunaan SISPRAS <a target="_blank" href="#">disini</a>
                            <br />
                            <i class="mdi mdi-phone mb-3"></i> KSI Helpdesk <a target="_blank" href="https://ksi.uajy.ac.id/helpdesk">disini</a>
                        </p>
                        <!-- Yellow Flower Icon -->
                        <div class="wrapper-zero d-flex justify-content-end">
                            <img data-aos="zoom-in-up" data-aos-delay="800" class="shape-yellow" src="~/img/decoration-yellow.png" alt="decoration-yellow" />
                        </div>
                    </div>
                    <!-- Right Side Column -->
                    <div class="col-md-5 col-xs-12 login-right-content">
                        <!-- Title Login -->
                        <p data-aos="fade-left" data-aos-delay="200" class="login-card-text"> Log in </p>
                        <form id="formLogin" method="post" enctype="multipart/form-data">
                            <input type="hidden" value="/" name="return_url" />
                            <!-- Username Field -->
                            <div data-aos="fade-left" data-aos-delay="300" class="input-group flex-nowrap mb-4 px-5">
                                <span class="input-group-text" id="addon-wrapping">
                                    <i class="mdi mdi-account" aria-hidden="true"></i>
                                </span>
                                <input type="text" id="inpUsername" class="form-control" placeholder="Username" name="username" aria-label="Username" aria-describedby="addon-wrapping" required />
                            </div>
                            <!-- Password Field -->
                            <div data-aos="fade-left" data-aos-delay="400" class="input-group flex-nowrap mb-4 px-5">
                                <span class="input-group-text" id="addon-wrapping">
                                    <i class="mdi mdi-key" aria-hidden="true"></i>
                                </span>
                                <input type="password" id="inpPassword" class="form-control" placeholder="Password" aria-label="Password" name="password" aria-describedby="addon-wrapping" required />
                            </div>
                            <!-- Submit Button -->
                            <div data-aos="fade-left" data-aos-delay="500" class="input-group d-flex justify-content-center">
                                <input type="submit" class="btn btn-primary" name="buttonLogin" value="Login" />
                            </div>
                        </form>
                        <!-- Motto -->
                        <div class="mt-auto wrapper-motto">
                            <p data-aos="zoom-in-up" data-aos-delay="900" class="motto"> UNGGUL - INKLUSIF - HUMANIS - BERINTEGRITAS </p>
                        </div>
                        <div class="wrapper-two d-flex justify-content-end">
                            <img class="shape-blue" src="~/img/decoration-blue-tip-2.png" alt="decoration-blue-tip-2" />
                        </div>
                    </div>  
                </div>
            </div>
        </div>
        <!-- Footer -->
        <div class="footer-login pt-2">
            <p> &copy; @DateTime.Now.Year.ToString() Kantor Sistem Informasi Universitas Atma Jaya Yogyakarta </p>
        </div>
    </div>
    <!-- jQuery -->
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/jquery.validate.js"></script>
    <!-- Boostrap -->
    <script src="~/lib/bootstrap5/js/bootstrap.bundle.min.js"></script>
    <!-- Sweet Alert -->
    <script src="~/lib/sweetalert2/sweetalert2.min.js"></script>
    <!-- Animate on Scroll Script -->
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <!-- Animate -->
    <link rel="stylesheet" href="~/css/animate.min.css" />
    <script>
        AOS.init({ once: true });

        $('#formLogin').on('submit', function (e) {
            e.preventDefault();

            if (!$(".form-control").isValid) {
                var formData = $('#formLogin').serialize();

                $.ajax({
                    url: "/Account/getRole",
                    type: "POST",
                    data: formData,
                    headers: { "RequestVerificationToken": $('input[name="__RequestVerificationToken"]').val() },
                    dataType: "json",
                    success: function (result) {
                        if (!result.status) {
                            Swal.fire({
                                icon: 'error',
                                title: 'Login Gagal!',
                                showClass: { popup: "animate__animated animate__fadeInDown" },
                                hideClass: { popup: "animate__animated animate__fadeOutUp" },
                                text: result.pesan,
                                confirmButtonColor: '#f2aa4c',
                                confirmButtonText: 'Close'
                            })
                        } else  {
                            $('#role').empty();
                            for (var i = 0; i < result.data.length; i++) {
                                $('#role').append('<option value="' + result.data[i].ID_ROLE + ',' + result.data[i].DESKRIPSI + '">' + result.data[i].DESKRIPSI + '</option>');
                            }
                            $('#username').val($('#inpUsername').val());
                            $('#password').val($('#inpPassword').val());

                            $('#RoleModal').modal('show');
                        }
                    }
                })
            }
        });
    </script>
</body>
</html>